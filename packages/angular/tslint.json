{
  "extends": "../tslint.json",
  "rulesDirectory": [
    "../../node_modules/codelyzer"
  ],
  "rules": {
    "no-import-side-effect": [
      true,
      {
        "ignore-module": "extension|^@simplism"
      }
    ],
    "angular-whitespace": [
      true,
      "check-interpolation",
      "check-semicolon"
    ],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [
      true,
      "attribute",
      [
        "sd"
      ],
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [
        "sd"
      ],
      "kebab-case"
    ],
    "max-inline-declarations": false,
    "no-life-cycle-call": true,
    "prefer-output-readonly": true,
    "no-conflicting-life-cycle-hooks": true,
    "enforce-component-selector": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "use-view-encapsulation": true,
    "no-attribute-parameter-decorator": true,
    "no-output-named-after-standard-event": false,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-output-on-prefix": true,
    "no-forward-ref": false,
    "no-unused-css": false,
    "use-life-cycle-interface": true,
    "contextual-life-cycle": true,
    "trackBy-function": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": [
      true,
      "Control",
      "Modal"
    ],
    "directive-class-suffix": [
      true,
      "Attribute",
      "Directive"
    ],
    "pipe-impure": true,
    "i18n": false,
    "template-cyclomatic-complexity": false,
    "template-conditional-complexity": false
  }
}

<!doctype html>
<html lang="ko">
<head>
    <%= htmlWebpackPlugin.options.PLATFORM === "android" ? `<meta name="format-detection" content="telephone=no">` : `` ;%>
    <%= htmlWebpackPlugin.options.PLATFORM === "android" ? `<meta name="msapplication-tap-highlight" content="no">` : `` ;%>

    <meta charset="utf-8">
    <base href="<%= htmlWebpackPlugin.options.BASE_HREF ;%>">

    <link rel="shortcut icon" href="favicon.ico">
    <meta name="viewport" content="initial-scale=1, width=device-width, viewport-fit=cover">
</head>
<body>
<app-root>
    <style>
        *,
        *:after,
        *:before {
            box-sizing: border-box;
        }

        html, body {
            padding: 0;
            margin: 0;
            background: #F5F5F5;
        }

        .app-loader-bar {
            position: fixed;
            top: 0;
            left: 0;
            height: 2px;
            width: 100%;
            background-color: white;
        }

        .app-loader-bar > div {
            position: fixed;
            top: 0;
            left: 0;
            display: inline-block;
            height: 2px;
            width: 100%;

            transform-origin: left;
        }

        .app-loader-bar > div:first-child {
            background-color: #2979FF;
            animation: app-loader-bar-1 2s infinite ease-in;
        }

        .app-loader-bar > div:last-child {
            background-color: white;
            animation: app-loader-bar-2 2s infinite ease-out;
        }

        @keyframes app-loader-bar-1 {
            0% {
                transform: scaleX(0);
            }
            60%, 100% {
                transform: scaleX(1.0);
            }
        }

        @keyframes app-loader-bar-2 {
            0%, 50% {
                transform: scaleX(0);
            }
            100% {
                transform: scaleX(1.0);
            }
        }
    </style>

    <div class="app-loader-bar">
        <div></div>
        <div></div>
    </div>
</app-root>


<%= htmlWebpackPlugin.options.PLATFORM === "android" ? `
    <script>

        var script = document.createElement('script');
        script.type= 'text/javascript';
        if(navigator.userAgent.toLowerCase().indexOf("android") === -1) {
            script.src= 'cordova-browser/cordova.js';
        }
        else {
            script.src= 'cordova-android/cordova.js';
        }

        document.body.appendChild(script);
    </script>` : "" ;%>
</body>
</html>

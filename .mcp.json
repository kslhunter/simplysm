{
  "mcpServers": {
    "context7": {
      "command": "node_modules/.bin/tsx",
      "args": ["packages/sd-claude/src/sd-claude.ts", "npx", "-y", "@upstash/context7-mcp"]
    },
    "playwright": {
      "command": "node_modules/.bin/tsx",
      "args": [
        "packages/sd-claude/src/sd-claude.ts",
        "npx",
        "@playwright/mcp@latest",
        "--headless"
      ],
      "env": {
        "PLAYWRIGHT_OUTPUT_DIR": ".tmp/playwright"
      }
    }
  }
}

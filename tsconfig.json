{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      },
      {
        "name": "@angular/language-service"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  }
}

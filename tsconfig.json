{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@simplysm-types"
    ]
  }
}

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf

ij_continuation_indent_size = 2
ij_any_else_on_new_line = true
ij_any_catch_on_new_line = true
ij_any_finally_on_new_line = true

ij_typescript_spaces_within_imports = true
ij_typescript_spaces_within_object_literal_braces = true
ij_typescript_align_object_properties = unset

ij_html_space_inside_empty_tag = true

ij_any_array_initializer_wrap = on_every_item
ij_any_array_initializer_new_line_after_left_brace = true
ij_any_array_initializer_right_brace_on_new_line = true
ij_any_ternary_operation_wrap = on_every_item

ij_any_binary_operation_wrap = normal
ij_any_binary_operation_sign_on_next_line = true
# ij_any_parentheses_expression_new_line_after_left_paren = true
# ij_any_parentheses_expression_right_paren_on_new_line = true

ij_any_call_parameters_wrap = on_every_item
ij_any_call_parameters_new_line_after_left_paren = true
ij_any_call_parameters_right_paren_on_new_line = true

ij_html_attribute_wrap = on_every_item
ij_html_new_line_before_first_attribute = when_multiline
ij_html_new_line_after_last_attribute = when_multiline

ij_html_do_not_indent_children_of_tags = unset

ij_any_method_call_chain_wrap = normal
{
  "statusLine": {
    "type": "command",
    "command": "node .claude/sd-statusline.js"
  },
  "enabledMcpjsonServers": ["context7", "playwright", "postgres"],
  "enableAllProjectMcpServers": true,
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(pnpm vitest:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm lint:*)",
      "Skill(sd-commit)",
      "mcp__playwright__browser_close",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_install",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_press_key",
      "mcp__playwright__browser_hover",
      "mcp__playwright__browser_run_code",
      "mcp__playwright__browser_handle_dialog",
      "mcp__playwright__browser_network_requests",
      "mcp__plugin_context7_context7__query-docs",
      "mcp__plugin_context7_context7__resolve-library-id"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "respectGitignore": true,
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "github@claude-plugins-official": true
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "in-process",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/sd-notify.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx eslint --fix \"$TOOL_INPUT_file_path\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$TOOL_INPUT_file_path\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
